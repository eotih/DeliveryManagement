@using ManaDeli.Models
@{
    ViewBag.Title = "UpDateUser";
    Layout = "~/Views/Dashboard/_AdminLayout.cshtml";
}

@model Account
@{
    ManaDeliEntities db = new ManaDeliEntities();
}
<!--nguoi dung cap nhat-->
<style>
    .error {
        color: red;
    }
</style>

<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form class="form-horizontal" @Url.Action("UpdateUser", "QuanLyUser") method="post" role="form" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.id)
                    <div class="au-card m-b-30">
                        <div class="au-card-inner">
                            <h3 class="title-2 m-b-40">Cập nhật tài khoản</h3>

                            <div class="form-group">
                                <label for="cc-number" class="control-label mb-1">Họ tên</label>
                                <input id="hoten" name="hoten" type="text" class="form-control cc-number identified visa" value="@Model.hoten" data-val="true">
                                @Html.ValidationMessageFor(model => model.hoten, "", new { @class = "error" })
                                <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label for="cc-number" class="control-label mb-1">Email</label>
                                <input id="email" name="email" type="text" class="form-control cc-number identified visa" value="@Model.email" data-val="true">
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "error" })
                                <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label for="cc-number" class="control-label mb-1">Password</label>
                                <input id="pass" name="pass" type="password" class="form-control cc-number identified visa" value="@Model.pass" data-val="true">
                                @Html.ValidationMessageFor(model => model.pass, "", new { @class = "error" })
                                <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label for="cc-number" class="control-label mb-1">Số điện thoại</label>
                                <input id="phone" name="phone" type="text" class="form-control cc-number identified visa" value="@Model.phone" data-val="true">
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "error" })
                                <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                            </div><div class="form-group">
                                <label for="cc-number" class="control-label mb-1">Địa chỉ</label>
                                <input id="diachi" name="diachi" type="text" class="form-control cc-number identified visa" value="@Model.diachi" data-val="true">
                                @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "error" })
                                <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                            </div>
                           
                        </div>
                        <div>
                            <button id="validate" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Cập nhật</span>
                            </button>
                        </div>
                    </div>
                    </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="copyright">
                    <p>Copyright © 2021 Delivery Management ( ManaDeli ).</p>
                </div>
            </div>
        </div>
    </div>
</div>





