@model ManaDeli.Models.DONHANG
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Dashboard/_AdminLayout.cshtml";
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="overview-wrap">
                    <h2 class="title-1">Thông tin đơn hàng</h2>
                    <button onclick="location.href='@Url.Action("Edit", "Delivery",  new { id = Model.Id })'" class="au-btn au-btn-icon au-btn--blue">
                        <i class="zmdi zmdi-plus"></i>Chỉnh sửa trạng thái
                    </button>
                </div>
                </br>
                <div class="card">

                    <div class="au-card m-b-30">
                        <div class="au-card-inner">
                            <h3 class="title-2 m-b-40">@Html.DisplayFor(model => model.madonhang)</h3>
                            <hr>
                            <div class="form-group">
                                <label for="company" class=" form-control-label">Trạng thái : <span class="badge badge-pill badge-primary">@Html.DisplayNameFor(model => model.trangthai)</span></label>
                            </div>
                            <div class="form-group">
                                <label for="vat" class=" form-control-label">Loại hàng : <span class="badge badge-pill badge-danger">@Html.DisplayFor(model => model.loaihang)</span></label>
                            </div>
                            <div class="form-group">
                                <label for="street" class=" form-control-label">Số lượng : @Html.DisplayFor(model => model.soluong)</label>
                            </div>

                            <div class="form-group">
                                <label for="country" class=" form-control-label">Dịch vụ : <span class="badge badge-pill badge-warning">@Html.DisplayFor(model => model.dichvu)</span></label>
                            </div>
                        </div>
                    </div>
                    <div class="au-card m-b-30">
                        <div class="au-card-inner">
                            <h4 class="title-2 m-b-40">Thông tin người nhận</h4>
                            <hr>
                            <div class="form-group">
                                <label for="company" class=" form-control-label">Tên người nhận : <span class="badge badge-pill badge-primary">@Html.DisplayFor(model => model.tennguoinhan)</span></label>
                            </div>
                            <div class="form-group">
                                <label for="vat" class=" form-control-label">Số điện thoại : <span class="badge badge-pill badge-danger">@Html.DisplayFor(model => model.ngaytaodon)</span></label>
                            </div>
                            <div class="form-group">
                                <label for="street" class=" form-control-label">Địa chỉ : <span class="badge badge-pill badge-danger">@Html.DisplayNameFor(model => model.diachinguoinhan)</span></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="copyright">
                    <p>Copyright © 2021 Delivery Management ( ManaDeli ).</p>
                </div>
            </div>
        </div>
    </div>
</div>